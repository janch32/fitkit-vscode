{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/class-name-casing": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "off",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "warn",
        "indent": ["warn", 4, {
			"SwitchCase": 1
		}]
    }
}
